<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/weather_header">

        <ListPreference
            android:defaultValue="Celsius"
            app:key="temperatureUnit"
            app:title="@string/signature_title"
            app:useSimpleSummaryProvider="true"
            android:entries="@array/units_array"
            app:entryValues="@array/units"/>

        <SwitchPreferenceCompat
            app:key="useGPS"
            app:title="@string/gps_title" />

        <!--<SwitchPreferenceCompat
            app:key="showNotification"
            app:title="@string/gps_title" />-->

    </PreferenceCategory>

</PreferenceScreen>